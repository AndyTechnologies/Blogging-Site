---
const { platform, username, url }  = Astro.props;
let murl = `${url}`;
if( !url ){
    murl = `${username}`;
}else{
    if( !murl.endsWith('/') ) murl += '/';
    murl += `${username}`;
}
---
<a href={`https://www.${platform}.com/${murl}`}>{platform}</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>